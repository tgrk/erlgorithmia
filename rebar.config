{erl_opts, [
    debug_info,
    {i, "deps/"},
    {i, "../"}
]}.

{deps, [
         {jiffy,            "0.14.7"}
       , {hackney,          "1.6.0"}
       , {eunit_formatters, "0.3.1"}
]}.

{overrides,
 [{override, jiffy, [
     {plugins, [pc]},
     {artifacts, ["priv/jiffy.so"]},
     {provider_hooks, [
         {post,
             [
             {compile, {pc, compile}},
             {clean, {pc, clean}}
             ]
          }]
      }
  ]}
]}.

{cover_enabled, true}.
{cover_print_enabled, true}.
{eunit_opts, [verbose,
              no_tty,
              {report, {eunit_progress, [colored]}}]}.

{xref_checks, [undefined_function_calls]}.